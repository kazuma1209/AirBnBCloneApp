<div class="row">
  <div class="col-md-3">
    <%= render 'room_menu' %>
  </div>
  <div class="col-md-9">
    <div class="panel panel-default">
      <div class="panel-heading">
        建物がある場所
      </div>

      <div class="panel-body">
        <div class="container">
          <%=form_for @room do |f| %>

            <div class="row">
              <div class="form-group">
                <label>住所</label>
                <%=f.text_field :address,placeholder:"郵便番号を入力",class:"form-control",required:true  %>
              </div>
            </div>

            <div class="text-center">
              <%=f.submit "Save",class:"btn btn-form" %>
            </div>


          <% end %>

        </div>
      </div>

    </div>
  </div>
</div>

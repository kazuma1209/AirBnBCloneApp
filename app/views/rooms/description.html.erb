<div class="row">
  <div class="col-md-3">
    <%= render 'room_menu'%>
  </div>
  <div class="col-md-9">
    <div class="panel panel-default">
      <div class="panel-heading">
        概要
      </div>

      <div class="panel-body">
        <div class="container">
          <%=form_for @room do |f| %>

            <div class="row">
              <div class="form-group">
                <label>リスティングネーム</label>
                <%=f.text_field :listing_name,placeholder:"リスティングネームを入力",class:"form-control" ,required:true %>
              </div>
            </div>

            <div class="row">
              <div class="form-group">
                <label>要約</label>
                <%=f.text_area :summary,rows:5,placeholder:"あなたの家の説明",class:"form-control" ,required:true %>
              </div>
            </div>

            <div class="text-center">
              <%=f.submit "保存",class:"btn btn-form" %>
            </div>


          <% end %>

        </div>
      </div>

    </div>
  </div>
</div>

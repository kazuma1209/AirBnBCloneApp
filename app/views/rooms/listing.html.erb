<div class="row">
  <div class="col-md-3">
    <%= render 'room_menu' %>
  </div>
  <div class="col-md-9">
    <div class="panel panel-default">
      <div class="panel-heading">
        リスト
      </div>

      <div class="panel-body">
        <div class="container">
          <%= form_for @room do |f| %>

            <div class="row">

              <div class="col-md-4 select">
                <div class="form-group">
                  <label>お家のタイプ</label>
                  <%= f.select :home_type, [["アパート/マンション", "Apartment"], ["一軒家", "House"], ["ベットと朝食付き", "Bed & Breakfast"]],
                                id: "home_type", prompt: "選択", class: "form-control" %>
                </div>
              </div>

              <div class="col-md-4 select">
                <div class="form-group">
                  <label>お部屋のタイプ</label>
                  <%= f.select :room_type, [["まるまる貸し切り", "Entire"], ["個室", "Private"], ["シェアルーム", "Shared"]],
                                id: "room_type", prompt: "選択", class: "form-control" %>
                </div>
              </div>

              <div class="col-md-4 select">
                <div class="form-group">
                  <label>人数</label>
                  <%= f.select :accommodate, [["1人", 1], ["2人", 2], ["3人", 3], ["4人以上", 4]],
                                id: "accommodate", prompt: "選択", class: "form-control" %>
                </div>
              </div>

              <div class="col-md-4 select">
                <div class="form-group">
                  <label>ベットルーム</label>
                  <%= f.select :bed_room, [["1部屋", 1], ["2部屋", 2], ["3部屋", 3], ["4部屋以上", 4]],
                                id: "bed_room", prompt: "選択", class: "form-control" %>
                </div>
              </div>

              <div class="col-md-4 select">
                <div class="form-group">
                  <label>バスルーム</label>
                  <%= f.select :bath_room, [["1個", 1], ["2個", 2], ["3個", 3], ["4個以上", 4]],
                                id: "bath_rooms", prompt: "選択", class: "form-control" %>
                </div>
              </div>

            </div>

            <div><%= f.submit "保存", class: "btn btn-normal" %></div>

          <% end %>

        </div>
      </div>

    </div>
  </div>
</div>

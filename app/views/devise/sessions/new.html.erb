<div class="row">
  <div class="col-md-4 col-md-offset-4">

    <h2 class="text-center">ログイン</h2>
    <br/>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-group">
        <%= f.email_field :email, autofocus: true, placeholder: "メールアドレス", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.password_field :password, autocomplete: "off", placeholder: "パスワード", class: "form-control" %>
      </div>

      <div>
        <% if devise_mapping.rememberable? %>
          <%= f.check_box :remember_me %> ログイン状態のままにしておく
        <% end %>
        <span class="pull-right">
          <%= link_to "パスワードを忘れた", new_user_password_path %>
        </span>
      </div>
      <br/><br/>

      <div class="actions">
        <%= f.submit "ログイン", class: "btn btn-normal btn-block " %>
      </div>
    <% end %>

    <hr/>
    <%= link_to "Facebookアカウントでログイン", user_facebook_omniauth_authorize_path, class: "btn btn-facebook btn-block" %>
  </div>
</div>

<div class="row">
  <div class="col-md-7 banner">
    <h1><span class="text-red">Airbnb</span> お気に入りのスポットを、素晴らしい経験から選ぼう。</h1>
  </div>
</div>

<%=form_tag search_path,method: :get do %>
  <div class="row">
    <div class="col-md-6">
      <%=text_field_tag :serch,params[:serch],placeholder: "どこにいく？",class:"form-control" %>
    </div>
    <div class="col-md-3">
      <%=text_field_tag :start_date,params[:start_date],placeholder: "チェックイン日",class:"form-control datepicker" %>
    </div>
    <div class="col-md-3">
      <%=text_field_tag :end_date,params[:end_date],placeholder: "チェックアウト日",class:"form-control datepicker"%>
    </div>
  </div>
  <br/><nr/>

  <div class="row">
    <div class="col-md-offset-4 col-md-4">
      <%=submit_tag "探す",class:"btn btn-normal btn-block" %>
    </div>
  </div>
  <% end %>

<!--ホーム-->
  <hr/><hr/><hr/>

  <div><h3>ホーム</h3></div>
  <br/>

<div class="row">
  <% @rooms.each do |room| %>
    <div class="col-md-4">
      <div class="panel panel-default">
        <div class="panel-heading preview">
          <%= image_tag room.cover_photo(:medium) %>
        </div>
        <div class="panel-body">
          <%= link_to room.listing_name,room %>
        </div>
      </div>
    </div>
  <% end %>
</div>

<div><h3>Cities</h3></div>
<br/>

<div class="row">
  <div class="col-md-3 col-sm-12">
    <a href="http://localhost:3000/search?utf8=%E2%9C%93&search=los+angeles">
      <div class="discovery-card" style="background-image: url('/assets/LA.jpg')"></div>
    </a>
  </div>
  <div class="col-md-3 col-sm-12">
    <a href="http://localhost:3000/search?utf8=%E2%9C%93&search=london">
      <div class="discovery-card" style="background-image: url('/assets/LD.jpg')"></div>
    </a>
  </div>
  <div class="col-md-3 col-sm-12">
    <a href="http://localhost:3000/search?utf8=%E2%9C%93&search=paris">
      <div class="discovery-card" style="background-image: url('/assets/PR.jpg')"></div>
    </a>
  </div>
  <div class="col-md-3 col-sm-12">
    <a href="http://localhost:3000/search?utf8=%E2%9C%93&search=miami">
      <div class="discovery-card" style="background-image: url('/assets/MI.jpg')"></div>
    </a>
  </div>
</div>


<script>
  $('#start_date').datepicker({
    dateFormat: 'dd-mm-yy',
    minDate: 0,
    maxDate: '3m',
    onSelect: function(selected) {
      $('#end_date').datepicker("option", "minDate", selected);
      $('#end_date').attr("disabled", false);
    }
  });

  $('#end_date').datepicker({
    dateFormat: 'dd-mm-yy',
    minDate: 0,
    maxDate: '3m',
    onSelect: function(selected) {
      $('#start_date').datepicker("option", "maxDate", selected);
    }
  });

</script>
